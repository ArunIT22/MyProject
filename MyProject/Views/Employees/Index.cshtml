@model IEnumerable<Employee>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="display-3 mb-3">List of Employees</div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Employee Id</th>
                        <th>Name</th>
                        <th>Designation</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Designation</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>